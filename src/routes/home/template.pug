div.home
  h2 Kayttaja
  pre {{ kayttaja }}

  hr
  router-link(
    :to="{ name: 'uusiPohja' }"
    tag="button") {{ $t('luo-pohja') }}
  hr
  table.table
    thead
      tr
        th {{ $t('nimi') }}
        th {{ $t('tila') }}
        th {{ $t('luotu') }}
    tbody
      tr(
        v-for="ops in opspohjalista",
        :key="ops.id",
        @click="naytaPohjanTiedot(ops.id)")
        td
          ep-content(v-model="ops.nimi")
        td {{ $t(ops.tila) }}
        td
          ep-aikaleima(:value="ops.luotu")
